@import "kouto-swiss"
@import '_variables'
normalize()

font-size(value) { 

    if (value is inherit) {
        /* do nothing, "inherit" has no unit */
      } else if (unit(value) is em){
    font-size: value;
  } else {
    font-size: value; 
    font-size: remify(value);
  }
}
remify(value) { /* separate mixin, so it can be used elsewhere */
    u = unit(value);

    if (u is 'px') {
        return unit(value/16, 'rem');
      } else {
        return unit(value, u);
      }
    }

html, body
  height:100%
  font-family $font
  color $font-color
  box-sizing border-box //border box reset
  &.noscroll
    overflow hidden

*, *:before, *:after 
  box-sizing: inherit //border box reset
h2
  color $primary-color
  font-family $cursive-font
  font-size 60px
  text-align center
  font-weight normal
  position relative
  padding-bottom 20px

h2:before
  content ""
  width 24%
  height 1px
  position absolute
  bottom 0
  left 38%
  background alpha(#000, .1)
  
h2:after
  content ""
  width 10%
  height 3px
  position absolute
  bottom -1
  left 45%
  background alpha(#000, .2)
  
      
  
button:focus
  outline 0
  
.button-primary
  border 2px solid $primary-color
  background #fff
  color $primary-color
  text-decoration none
  padding 12 24
  display inline-block
  transition 0.2s
  cursor pointer
  &:focus, &:hover
    background $primary-color
    color #fff
    outline none
  +below(md)
    width 100%
  // ================== Begin Navigation ======================
.nav
  position fixed
  top -60
  left 0
  width 100%
  height: auto
  color $primary-color
  z-index 90
  transition .5s
  background #fff
  box-shadow: 0px -1px 10px 0px rgba(0,0,0,0.10)


  +below(md)
    transform translate3d(0,1000px,0)
    transition: transform 0.5s ease;
    height 100%
    top 0
    &:before
      content "Menu"
      @extend h2
      text-align center
      width 100%
      padding 20px 0
      position relative
      display block
      top 0
      left 0
      
    &:after
      content ""
      width 100%
      height 140px
      position absolute
      bottom 0
      left 0
      background-repeat: no-repeat;
      background-position: top left;
      background-size cover
      background-image: url(../imgs/flores.png);

  &.scroll
    top 0

  &.showNav
    transform translate3d(0,0,0)


  &-menu
    margin 0px
    padding 0px
    text-align center

    &-item
      display inline-block
      +below(md)
        display block
        border-bottom 1px solid alpha($primary-color, .3)
        margin 0 30px
        &:first-child
          border-top 1px solid alpha($primary-color, .3)
    
      a
        color alpha($primary-color, .5)
        letter-spacing 0.25em
        text-decoration none
        text-transform uppercase
        font-weight bold
        font-size 12px
        transition .2s
        display inline-block
        position relative
        padding 20px
        +below(md)
          display block
          color alpha($primary-color, .6)
          text-align center
          padding 30px

        &:hover
          color $primary-color
          +below(md)
            color $primary-color

        &:before, &:after
          content ''
          width 100%
          height 4px
          position absolute
          left 0
          bottom 0

        &:after
          background #fff
          max-height  0
          transition .3s

        &.nav-active
          color $primary-color
          border-bottom 4px solid $primary-color

          &:after
            max-height  100%

      span
        display inline-block
        position relative
        line-height 1.25rem
        padding 20px 0

        &:before
          font-size 20px
          position absolute
          left 0

      &-label
        +tablet()
          display none


.hamburger
  background $primary-color - 20%
  color #fff
  border-radius 50%
  transition margin-left 250ms ease-in-out
  position fixed
  z-index 100
  bottom 5%
  right 5%

  +above(lg)
    display none

// ================== End Navigation ======================
.home
  background-image url(imgs/foto1.jpg)
  background-position top left
  background-size cover
  background-attachment fixed
  height: 100%
  position: relative
  box-sizing content-box

.mask
  background #000
  height 100%
  width 100%
  opacity .2
.nomes
  width 100%
  position: absolute
  top 50%
  transform translate(0, -70%)
  & img
    width 30%
    align(both)
    +below(md)
      width 80%
    


.section-margin
  width auto
  max-width 85%
  display block
  margin-right auto
  margin-left auto
  padding 80px 0
  position relative

.form-control
  display block
  width 100%
  padding 10px 10px
  border: 1px solid #ccc
  margin-top 10px
  background #fff

.contact-item
  margin-bottom 40px
  
#map
  height 400px
  width 100%
  
.error
  color #fa4040
  padding  15px
  display block
  margin-bottom 20px
  border solid 1px #fa4040
  background alpha(#fa4040, .1)
  +below(md)
    text-align center
    
    
 .data
  text-align center
  display block
  letter-spacing 3px
  
  
.countdown
  &-row
    text-align center
    margin 0 0 20px 0
  &-section
    display inline-block
    position relative
    margin 0 10px
    padding 10px 15px
    padding-top 18px
    border-radius 50px
    &:before
      content: " : "
      display: inline-block
      margin: 0 0 0 -15px
      position: absolute
      left: 0;
      font-size 35px
    &:first-child:before
      content ""
  &-amount
    font-size 35px
    font-weight bold
  &-period
    display block
    font-family $cursive-font
    text-transform lowercase
    font-size 22px
    color $accent-color
    
