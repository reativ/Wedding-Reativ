@import "kouto-swiss"
@import '_variables'
@import '_menu'
normalize()
  
font-size(value) { 

    if (value is inherit) {
        /* do nothing, "inherit" has no unit */
	} else if (unit(value) is em){
		font-size: value;
	} else {
		font-size: value; 
        font-size: remify(value);
    }
}
remify(value) { /* separate mixin, so it can be used elsewhere */
    u = unit(value);

    if (u is 'px') {
        return unit(value/16, 'rem');
    } else {
        return unit(value, u);
    }
}

html, body
	height:100%
	font-family $font
	color $font-color
	box-sizing border-box //border box reset
	
*, *:before, *:after 
	box-sizing: inherit //border box reset
  
.wrapper
  position relative
  overflow hidden
  
.fullpage
  background-image url(imgs/couple_home2.jpg)
  background-position top left
  background-size cover
  background-attachment fixed
  height: 100%
  padding-bottom: 100px
  position: relative
  box-sizing content-box

  &:after
    content: "";
    width: 100%;
    height: 241px;
    position: absolute;
    left: 0;
    bottom: 0;
    background-repeat: repeat-x;
    background-position: top center;
    background-image: url(http://www.wiselythemes.com/html/lilac/images/divider_1.png);
    
.nomes
  position relative
  transform-style preserve-3d
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 50%
  height 70%
  background-image url(imgs/jer.png)
  background-position center
  background-size contain
  background-repeat no-repeat
