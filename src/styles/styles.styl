@import "kouto-swiss"
@import '_variables'
@import '_menu'
normalize()
  
font-size(value) {

    if (value is inherit) {
        /* do nothing, "inherit" has no unit */
	} else if (unit(value) is em){
		font-size: value;
	} else {
		font-size: value; 
        font-size: remify(value);
    }
}
remify(value) { /* separate mixin, so it can be used elsewhere */
    u = unit(value);

    if (u is 'px') {
        return unit(value/16, 'rem');
    } else {
        return unit(value, u);
    }
}

html, body
	height:100%
	font-family $font
	color $font-color
	box-sizing border-box //border box reset
	
*, *:before, *:after 
	box-sizing: inherit //border box reset
  
.wrapper
  position relative
  overflow hidden
  
