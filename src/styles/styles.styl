@import "kouto-swiss"
@import '_variables'
@import '_mixins'
normalize()

//==== resets =======================================================
html, body
  height:100%
  font-family $font
  color $font-color
  box-sizing border-box //border box reset
  &.noscroll
    overflow hidden

*, *:before, *:after 
  box-sizing: inherit //border box reset
h2
  color $accent-color
  font-family $cursive-font
  font-size 60px
  text-align center
  font-weight normal
  position relative
  padding-bottom 20px

h2:before
  content ""
  width 24%
  height 1px
  position absolute
  bottom 0
  left 38%
  background alpha(#000, .1)
  +below(md)
    width 72%
    left 14%
  
h2:after
  content ""
  width 10%
  height 3px
  position absolute
  bottom -1
  left 45%
  background alpha(#000, .2)
  +below(md)
    width 28%
    left 36%
  
h3
  color $accent-color
  
input:focus, select:focus, textarea:focus, button:focus
  outline 0
  
  
//=== Base items =======================================================
  
.btn
  border-radius 50px
  text-decoration none
  padding 12 24
  display inline-block
  transition 0.2s
  cursor pointer
  &:focus, &:hover
    outline none
  +below(md)
    width 100%
    
  &-primary
    border 2px solid #fff
    background transparent
    color #fff
    &:focus, &:hover
      background #fff
      color $accent-color
      
  &-secondary
    border 2px solid $accent-color
    background #fff
    color $primary-color
    &:focus, &:hover
      background $accent-color
      color #fff
    
.section-margin
  width auto
  max-width 70%
  display block
  margin-right auto
  margin-left auto
  padding 60px 0 80px 0
  position relative
  +below(md)
    max-width 85% 
  
  
// ==== Nav =======================================================
.nav
  position fixed
  top 0
  left 0
  width 100%
  height: auto
  color #fff
  z-index 90
  transition .5s
  background transparent
  border-bottom 1px solid rgba(255, 255, 255, 0.19)
  box-shadow: 0px -1px 10px 0px rgba(0,0,0,0.10)
  
  +below(md)
    transform translate3d(0,-300px,0)
    transition: transform 0.5s ease;
  

  &.scroll
    background #fff
    color $primary-color
    
    & a
      color alpha($primary-color, .5)
      &:hover
          color $accent-color
        
    
    & .nav-active a
      color $accent-color
      border 1px solid #ccc

    
  &.showNav
    transform translate3d(0,0,0)


  &-menu
    margin 0px
    padding 0px
    text-align center

    &-item
      display inline-block
      margin 10px 5px
          
      &.nav-active a
          color #fff
          border 1px solid #fff
          font-weight bold
          border-radius 50px
          +below(md)
            border-radius 0
            border 0
    
      a
        color alpha(#fff, .7)
        letter-spacing 0.25em
        text-decoration none
        text-transform uppercase
        font-size 10px
        transition .2s
        display inline-block
        position relative
        padding 15px 20px
        border 1px solid rgba(255, 255, 255, 0)


        &:hover
          color #fff

        





// ==== home =======================================================
.home
  background-image url(imgs/home1.jpg)
  background-position bottom right
  background-size cover
  background-attachment fixed
  height: 100%
  position: relative
  box-sizing content-box
  overflow hidden
  &:before
    shadow-down(rgba(0, 0, 0, 0.3))
  

.mask
  background $accent-color
  height 100%
  width 100%
  opacity .3
  position absolute
  top 0
  left 0
  
  
.nomes
  width 100%
  position: absolute
  top 50%
  & img
    width 34%
    align(both)
    +below(md)
      width 80%
      
    +below(md, orientation: landscape)
      width 50%
      
#particles-js
  position: absolute
  width: 100%
  height: 100%
  z-index 1     
  
  
.downArrow
  position: absolute;
  right: 0;
  bottom: 40px;
  left: 0;
  margin: auto;
  width :15px;
  height: 15px;
  +below(md, orientation: landscape)
    display none
    
.bounce {
	-moz-animation: bounce 3s infinite;
	-webkit-animation: bounce 3s infinite;
	animation: bounce 3s infinite;
}
@keyframes bounce {
  0% { opacity: 0; }
  10% { transform: translateY(0); opacity: 1; }
  100% { transform: translateY(15px); opacity: 0;}
}
  
  
  
  
  
  
 

//==== Save the date =======================================================    
    
 .data
  text-align center
  display block
  letter-spacing 3px
  font-size 20px
  text-transform uppercase
  +below(md)
    font-size 16px
  
  
.countdown
  &-row
    text-align center
    margin 10px 0 20px 0
    clearfix()
  &-section
    display inline-block
    position relative
    margin 0 10px
    padding 10px
    +below(md)
      margin 0
    &:before
      content: " : "
      display: inline-block
      margin: 0 0 0 -15px
      position: absolute
      left: 0;
      font-size 22px
      +below(md)
        margin 0
    &:first-child:before
      content ""
    
  &-amount
    font-size 24px
    font-weight bold
  &-period
    display block
    font-family $cursive-font
    text-transform lowercase
    font-size 22px
    color $accent-color
    

//==== RSVP =======================================================

.accent-bg
  background-color $accent-color
  background-image: url("imgs/brilliant.png")
  position: relative
  
  &:before
    shadow-top(#2f191c)
    
  &:after
    shadow-down(#2f191c)
    
  & h2
    color #fff
    &:before
      background alpha(#fff, .2)
    &:after
      background alpha(#fff, .3)
input.form-control::placeholder
  color alpha(#fff, 30%)
  
.form-control
  display block
  width 100%
  padding 14px 20px
  border: 1px solid alpha(#fff, 30%)
  margin-top 10px
  background alpha(#fff, .1)
  color #fff
  border-radius 50px
  transition .2s
  &:focus
    border-color #fff
  
option
  background $accent-color
  
select.form-control:not([size]):not([multiple])
  height: 49px

.error
  color #fa4040
  padding  15px
  display block
  margin-bottom 20px
  border solid 1px #fa4040
  border-radius 50px
  background alpha(#000, .2)
  +below(md)
    text-align center
    
.contact-item
  margin-bottom 40px
  color alpha(#fff, .8)

//==== Gifts =======================================================
.gift
  &-text
    text-align center
    line-height 1.5rem
    
  &-row
    margin-top 60px
    clearfix()
    +above(md)
      padding 0 60px
      
    +between(md, lg)
      padding 0
    
  &-card
    column(1/2, $cycle: 2, $gutter: 10)
    margin-bottom 20px
    transition: all 0.6s cubic-bezier(.25,.8,.25,1);
    background #fff
    border-radius: 10px
    box-shadow: 0 2px 25px rgba(0, 0, 0, 0.1);
    +below(md)
      stack()
      
    &:hover
      box-shadow: 0 8px 40px rgba(0, 0, 0, 0.2);
      & img
        opacity 1
      
    & img
      max-width 100%
      height 150px
      padding 40px 60px
      display block
      margin 0 auto
      opacity .8
      transition .4s
    
    
  

  
//==== Map =======================================================
  
#map
  height 450px
  width 100%

  
.map
  &-row
    padding-bottom 30px
    +above(md)
      padding-top 10px
    
  &-section-map
    padding-top 30px
    +above(md)
      width 95%
      padding-top 60px
    
  &-section-adress
    background #fff
    padding 30px
    text-align center
    border-radius: 10px
    margin-bottom 10px
    +above(md)
      width 40%
      box-shadow: 0 1px 25px rgba(0, 0, 0, 0.1);
      position absolute
      right 0
      z-index 1
      
    
.adress
  display block
  line-height: 25px
  padding-bottom: 40px
  
  
.quote
  color #fff
  text-align center
  padding 40px
  border-top 1px solid alpha(#fff, .2)
  background alpha(#000, .2)
  font-size 26px
  font-family $cursive-font
  
.verse
  display block
  font-family $font
  font-size 14px
  font-weight 100
  margin-top 10px


    



